---
// Hero section with asymmetric layout
---

<section class="min-h-screen flex items-center pt-20 px-6">
	<div class="max-w-5xl mx-auto w-full">
		<div class="grid lg:grid-cols-12 gap-12 items-center">
			<!-- Left content -->
			<div class="lg:col-span-7 space-y-8">
				<!-- Greeting with hand-drawn feel -->
				<div class="flex items-center gap-3 text-stone">
					<span class="inline-block w-12 h-px bg-current"></span>
					<span class="text-sm tracking-widest uppercase font-medium"
						>Hello, I'm</span
					>
				</div>

				<!-- Name with mixed typography -->
				<h1 class="space-y-2">
					<span
						class="block font-display text-5xl sm:text-6xl lg:text-7xl text-ink"
					>
						Divya Soni
					</span>
					<span
						class="block font-display text-5xl sm:text-6xl lg:text-7xl italic text-accent"
					>
						Mandan
					</span>
				</h1>

				<!-- Role with typewriter effect feel -->
				<p class="text-lg sm:text-xl text-stone max-w-lg leading-relaxed">
					Full-stack developer with a
					<span class="text-ink font-medium">frontend obsession</span>. I craft
					interfaces that feel
					<em class="font-display text-accent not-italic">delightful</em>
					and build backends that just work.
				</p>

				<!-- CTA Buttons -->
				<div class="flex flex-wrap items-center gap-4 pt-4">
					<a
						href="#work"
						class="group inline-flex items-center gap-2 px-6 py-3 bg-ink text-paper rounded-full font-medium hover:bg-accent transition-colors"
					>
						See my work
						<svg
							class="w-4 h-4 transition-transform group-hover:translate-x-1"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
						</svg>
					</a>
					<a
						href="#contact"
						class="inline-flex items-center gap-2 px-6 py-3 border border-ink/20 rounded-full font-medium hover:border-accent hover:text-accent transition-colors"
					>
						Get in touch
					</a>
				</div>

				<!-- Social Links -->
				<div class="flex items-center gap-6 pt-4 text-stone">
					<a
						href="https://github.com/divyasonimandan"
						target="_blank"
						rel="noopener"
						class="hover:text-accent transition-colors"
						aria-label="GitHub"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path
								d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
							></path>
						</svg>
					</a>
					<a
						href="https://www.linkedin.com/in/divya-mandan"
						target="_blank"
						rel="noopener"
						class="hover:text-accent transition-colors"
						aria-label="LinkedIn"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path
								d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
							></path>
						</svg>
					</a>
					<a
						href="mailto:divyasoni2919@gmail.com"
						class="hover:text-accent transition-colors"
						aria-label="Email"
					>
						<svg
							class="w-5 h-5"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="1.5"
								d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
							></path>
						</svg>
					</a>
				</div>
			</div>

			<!-- Right side - Abstract shape / decoration -->
			<div class="lg:col-span-5 hidden lg:flex items-center justify-center">
				<div class="relative">
					<!-- Decorative geometric shapes -->
					<div
						class="absolute -top-8 -left-8 w-32 h-32 border-2 border-accent/30 rounded-full animate-float"
						style="animation-delay: 0s;"
					>
					</div>
					<div
						class="absolute -bottom-4 -right-4 w-24 h-24 bg-accent/10 rounded-2xl rotate-12 animate-float"
						style="animation-delay: 1s;"
					>
					</div>
					<div
						class="absolute top-1/2 -right-12 w-16 h-16 border border-clay/40 rounded-lg rotate-45 animate-float"
						style="animation-delay: 2s;"
					>
					</div>

					<!-- Main shape with code snippet aesthetic -->
					<div
						class="relative w-72 h-80 bg-surface rounded-3xl p-6 shadow-lg rotate-3 hover:rotate-0 transition-transform duration-500"
					>
						<div class="space-y-3 font-mono text-sm">
							<div class="text-clay">// currently building</div>
							<div>
								<span class="text-accent">const</span>
								<span class="text-ink"> developer</span>
								<span class="text-stone">=</span>
								<span class="text-accent">{} </span>
								<div class="pl-4">
									<span class="text-stone">name:</span>
									<span class="text-green-600">'Divya'</span>,
								</div>
								<div class="pl-4">
									<span class="text-stone">focus:</span>
									<span class="text-green-600">'Frontend'</span>,
								</div>
								<div class="pl-4">
									<span class="text-stone">loves:</span>
									<span class="text-accent">[</span>
								</div>
								<div class="pl-8">
									<span class="text-green-600">'clean code'</span>,
								</div>
								<div class="pl-8">
									<span class="text-green-600">'smooth UX'</span>,
								</div>
								<div class="pl-8">
									<span class="text-green-600">'good coffee'</span>
								</div>
								<div class="pl-4"><span class="text-accent">]</span></div>
								<div><span class="text-accent"></span></div>;
							</div>
						</div>

						<!-- Blinking cursor -->
						<div
							class="absolute bottom-6 left-6 w-2 h-5 bg-accent animate-pulse"
						>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Scroll indicator -->
		<div
			class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden lg:flex flex-col items-center gap-2 text-stone"
		>
			<span class="text-xs tracking-widest uppercase">Scroll</span>
			<div class="w-px h-12 bg-linear-to-b from-current to-transparent"></div>
		</div>
	</div>
</section>
