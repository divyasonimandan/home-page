---
// Projects section with featured work

interface Project {
  title: string;
  description: string;
  tech: string[];
  link?: string;
  github?: string;
  featured?: boolean;
  year: string;
}

const projects: Project[] = [
  {
    title: "Project Alpha",
    description: "A full-stack web application with real-time features. Built with modern tooling and deployed for scale. This showcases my ability to handle both frontend polish and backend complexity.",
    tech: ["React", "TypeScript", "Node.js", "PostgreSQL"],
    link: "#",
    github: "#",
    featured: true,
    year: "2025"
  },
  {
    title: "Design System",
    description: "A comprehensive component library with accessibility baked in. Includes documentation, Storybook integration, and theming support.",
    tech: ["React", "CSS", "Storybook"],
    github: "#",
    featured: true,
    year: "2025"
  },
  {
    title: "CLI Tool",
    description: "A developer productivity tool that automates repetitive tasks. Because life's too short for manual work.",
    tech: ["Node.js", "TypeScript"],
    github: "#",
    year: "2024"
  },
  {
    title: "Portfolio Site",
    description: "You're looking at it! Built with Astro for performance and that sweet partial hydration.",
    tech: ["Astro", "Tailwind", "TypeScript"],
    github: "#",
    year: "2026"
  }
];

const featuredProjects = projects.filter(p => p.featured);
const otherProjects = projects.filter(p => !p.featured);
---

<section id="work" class="py-32 px-6">
  <div class="max-w-5xl mx-auto">
    <!-- Section header -->
    <div class="flex items-center gap-4 mb-16">
      <span class="font-mono text-sm text-accent">03</span>
      <h2 class="font-display text-3xl sm:text-4xl text-ink dark:text-ink-dark">Selected work</h2>
      <span class="flex-1 h-px bg-ink/10 dark:bg-ink-dark/10"></span>
    </div>
    
    <!-- Featured projects - larger cards -->
    <div class="space-y-8 mb-16">
      {featuredProjects.map((project, index) => (
        <article class="group relative grid lg:grid-cols-12 gap-6 p-8 bg-surface dark:bg-surface-dark rounded-3xl card-lift">
          <!-- Project number -->
          <div class="lg:col-span-1 font-mono text-6xl text-ink/5 dark:text-ink-dark/5 font-bold">
            {String(index + 1).padStart(2, '0')}
          </div>
          
          <!-- Content -->
          <div class="lg:col-span-7 space-y-4">
            <div class="flex items-center gap-3">
              <h3 class="text-2xl font-display text-ink dark:text-ink-dark group-hover:text-accent transition-colors">
                {project.title}
              </h3>
              <span class="font-mono text-xs text-stone dark:text-stone-dark">{project.year}</span>
            </div>
            
            <p class="text-stone dark:text-stone-dark leading-relaxed">
              {project.description}
            </p>
            
            <!-- Tech stack -->
            <div class="flex flex-wrap gap-2 pt-2">
              {project.tech.map(t => (
                <span class="px-3 py-1 font-mono text-xs bg-ink/5 dark:bg-ink-dark/5 text-ink dark:text-ink-dark rounded-full">
                  {t}
                </span>
              ))}
            </div>
          </div>
          
          <!-- Links -->
          <div class="lg:col-span-4 flex lg:flex-col lg:items-end lg:justify-center gap-4">
            {project.link && (
              <a 
                href={project.link}
                target="_blank"
                rel="noopener"
                class="inline-flex items-center gap-2 text-sm font-medium text-ink dark:text-ink-dark hover:text-accent transition-colors"
              >
                View live
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            )}
            {project.github && (
              <a 
                href={project.github}
                target="_blank"
                rel="noopener"
                class="inline-flex items-center gap-2 text-sm font-medium text-stone dark:text-stone-dark hover:text-accent transition-colors"
              >
                Source
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
          </div>
          
          <!-- Decorative corner -->
          <div class="absolute top-4 right-4 w-8 h-8 border-t-2 border-r-2 border-transparent group-hover:border-accent transition-colors duration-300"></div>
        </article>
      ))}
    </div>
    
    <!-- Other projects - compact list -->
    <div class="space-y-4">
      <h3 class="font-mono text-sm uppercase tracking-widest text-stone dark:text-stone-dark mb-6">
        Other noteworthy projects
      </h3>
      
      <div class="grid sm:grid-cols-2 gap-4">
        {otherProjects.map((project) => (
          <article class="group p-6 border border-ink/10 dark:border-ink-dark/10 rounded-2xl hover:border-accent/30 transition-colors">
            <div class="flex items-start justify-between mb-3">
              <h4 class="font-medium text-ink dark:text-ink-dark group-hover:text-accent transition-colors">
                {project.title}
              </h4>
              <span class="font-mono text-xs text-stone dark:text-stone-dark">{project.year}</span>
            </div>
            
            <p class="text-sm text-stone dark:text-stone-dark mb-4">
              {project.description}
            </p>
            
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-2">
                {project.tech.slice(0, 2).map(t => (
                  <span class="font-mono text-xs text-clay dark:text-stone-dark">{t}</span>
                ))}
              </div>
              
              {project.github && (
                <a href={project.github} target="_blank" rel="noopener" class="text-stone dark:text-stone-dark hover:text-accent transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</section>
